<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FinishActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_VS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20sp"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_VE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="20sp"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_HT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20sp"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_HB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="20sp"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/title_finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/finish_title"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="@id/gl_HB"
        app:layout_constraintEnd_toEndOf="@id/gl_VE"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="@id/gl_VS"
        app:layout_constraintTop_toTopOf="@id/gl_HT"
        app:layout_constraintVertical_bias="0.13999999" />

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/finish"
        app:layout_constraintTop_toBottomOf="@id/title_finish"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>